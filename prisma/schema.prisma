// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#3B82F6")
  isDefault Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  weeks     Week[]
  weekGenerationLogs WeekGenerationLog[]
  dayTags   DayTag[]
  dayNotes  DayNote[]

  @@index([order])
}

model Week {
  id         String   @id @default(cuid())
  categoryId String
  startDate  DateTime
  endDate    DateTime
  weekNumber Int
  year       Int
  createdAt  DateTime @default(now())

  category   Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  todos      Todo[]
  reflection WeekReflection?

  @@unique([categoryId, startDate])
  @@index([categoryId, startDate])
  @@index([year, weekNumber])
}

model Todo {
  id          String    @id @default(cuid())
  weekId      String
  content     String
  completed   Boolean   @default(false)
  dueDate     DateTime
  order       Int       @default(0)
  parentId    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  week        Week      @relation(fields: [weekId], references: [id], onDelete: Cascade)
  parent      Todo?     @relation("TodoSubtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks    Todo[]    @relation("TodoSubtasks")

  @@index([weekId, dueDate, order])
  @@index([completed])
  @@index([parentId])
}

model WeekGenerationLog {
  id              String   @id @default(cuid())
  categoryId      String   @unique
  lastGeneratedAt DateTime @default(now())
  weeksGenerated  Int      @default(0)

  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model DayTag {
  id         String   @id @default(cuid())
  categoryId String
  date       DateTime
  tag        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([categoryId, date])
  @@index([categoryId, date])
}

model WeekReflection {
  id        String   @id @default(cuid())
  weekId    String   @unique
  content   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  week      Week     @relation(fields: [weekId], references: [id], onDelete: Cascade)

  @@index([weekId])
}

model DayNote {
  id         String   @id @default(cuid())
  categoryId String
  date       DateTime
  content    String   @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([categoryId, date])
  @@index([categoryId, date])
}
